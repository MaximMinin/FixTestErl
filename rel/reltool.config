{sys, [
       {lib_dirs, []},
       {erts, [{mod_cond, all}, {app_file, strip}]},
       {app_file, strip},
       {rel, "fixTestErl", "0.0.1",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         ssl,
         inets,
         public_key,
         compiler,
         mnesia,
         xmerl,
         yaws,
         syntax_tools,
         wx,
         observer,
		 goldrush,         
         lager,
         fixTestErl
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib,
         fixTestErl
        ]},
       {boot_rel, "fixTestErl"},
       {profile, embedded},
       {incl_cond, include},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, hipe, [{incl_cond, exclude}]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, inets, [{incl_cond, include}]},
       {app, compiler, [{incl_cond, include}]},
       {app, mnesia, [{incl_cond, include}]},
       {app, xmerl, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, asn1, [{incl_cond, include}]},
       {app, wx, [{incl_cond, include}]},
       {app, observer, [{incl_cond, include}]},
       {app, syntax_tools, [{incl_cond, include}]},
       {app, goldrush, [{incl_cond, include}, {lib_dir, "../deps/goldrush"}]},
       {app, lager, [{incl_cond, include}, {lib_dir, "../deps/lager"}]},
       {app, yaws, [{incl_cond, include}, {lib_dir, "../deps/yaws"}]},
       {app, fix_convertor, [{incl_cond, include}, {lib_dir, "../deps/fix_convertor"}]},
       {app, fixTestErl, [{incl_cond, include}, {lib_dir, ".."}]}
      ]}.

{target_dir, "fixTestErl"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/fixTestErl", "bin/fixTestErl"},
           {copy, "files/fixTestErl.cmd", "bin/fixTestErl.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
