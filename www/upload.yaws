    <div class="container theme-showcase" role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <p>
        	You can upload scenarios here.
        	Scenario is an erlang module, that implements the behaviour <em>"test_case_template"</em>.
        	You can also upload some utils modules too.
        </p>
     </div>
     
     <div class="page-header">
     	<h1>Upload</h1>
	  </div>

      <div class="btn-group" role="group" aria-label="Upload">
	      <form enctype="multipart/form-data" method="post" action="upload_testcase.yaws">
	      	<p>
	      	<span class="btn btn-default btn-file">Choose File...
	      		<input type="file" name="foo"></input>
	      	</span>
	      	</p><p>
	      	<input type="text" class="form-control" readonly id="upload-file-info">
	      	</p><p>
	      	<button type="submit" class="btn btn-default">Submit</button>
		  	</p>
	  	 </form>
      </div>

      <erl>
      	out(A) ->
      		case A#arg.querydata of
      			undefined -> ok;
      			"upload_successful" ->
      			{html, "<div class=\"alert alert-success alert-dismissible\" role=\"alert\">
      				<button type=\"button\" class=\"close\" data-dismiss=\"alert\"><span aria-hidden=\"true\">&times;</span><span class=\"sr-only\">Close</span></button>
      				<strong>Gratulation!</strong> Upload is successful!
      				</div>"};
	      		Error ->
	      			{html, "<div class=\"alert alert-danger alert-dismissible\" role=\"alert\">
	      					<button type=\"button\" class=\"close\" data-dismiss=\"alert\"><span aria-hidden=\"true\">&times;</span><span class=\"sr-only\">Close</span></button>
	      					<strong>Alert!</strong> Check file, it's not looking good <p>" ++ 
	      					re:replace(
	      							   re:replace(Error, "%20", " ", [global, {return, list}]),
	      							   "%22", "", [global, {return, list}])
	      					++ "</p>.
	      					</div>"}
      		end.
      	</erl>
      	
    </div> <!-- /container -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="dist/js/bootstrap.min.js"></script>
    <script>
    $(document).on('change', '.btn-file :file', function() {
    	  var input = $(this),
    	      numFiles = input.get(0).files ? input.get(0).files.length : 1,
    	      label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
    	  input.trigger('fileselect', [numFiles, label]);
    	});

    $(document).ready( function() {
    	    $('.btn-file :file').on('fileselect', function(event, numFiles, label) {
    	        
    	        var input = $('#upload-file-info'),
    	            log = numFiles > 1 ? numFiles + ' files selected' : label;
    	        
    	        if( input.length ) {
    	            input.val(log);
    	        } 
    	    });
    	});
    </script>
  </body>
